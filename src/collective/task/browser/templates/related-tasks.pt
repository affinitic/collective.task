<tal:block i18n:domain="collective.task">
<fieldset id="tasks-listing" tal:condition="viewlet/available">
  <legend i18n:translate="">Tasks</legend>
  <ul>
    <tal:block tal:repeat="task viewlet/tasks">
      <li>
        <a tal:content="task/title" tal:attributes="href task/absolute_url">title</a>,
        <span tal:condition="task/deadline">
          <span i18n:translate="">Deadline:</span> <span tal:replace="task/deadline"/>,
        </span>
        <span tal:condition="task/responsible">
          <span tal:repeat="responsible task/responsible">
            <span tal:content="responsible"/><span tal:condition="not:repeat/responsible/end">, </span>
          </span>
        </span>
      </li>
    </tal:block>
  </ul>
</fieldset>
</tal:block>


